{
    "name": "extension",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/extension/src",
    "tags": [
        "scope:extension",
        "type:app"
    ],
    "targets": {
        "dev": {
            "command": "wxt -b chrome",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "dev:chrome": {
            "command": "wxt -b chrome",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "dev:firefox": {
            "command": "wxt -b firefox",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "dev:edge": {
            "command": "wxt -b edge",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "build": {
            "executor": "nx:noop",
            "dependsOn": [
                "build:chrome",
                "build:firefox",
                "build:edge"
            ],
            "options": {
                "cwd": "apps/extension"
            }
        },
        "build:chrome": {
            "command": "wxt build -b chrome",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "build:firefox": {
            "command": "wxt build -b firefox",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "build:edge": {
            "command": "wxt build -b edge",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "zip": {
            "executor": "nx:noop",
            "dependsOn": [
                "zip:chrome",
                "zip:firefox",
                "zip:edge"
            ],
            "options": {
                "cwd": "apps/extension"
            }
        },
        "zip:chrome": {
            "command": "wxt zip -b chrome",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "zip:firefox": {
            "command": "wxt zip -b firefox",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "zip:edge": {
            "command": "wxt zip -b edge",
            "options": {
                "cwd": "apps/extension"
            }
        },
        "lint": {
            "command": "biome lint ./src",
            "options": {
                "cwd": "apps/extension"
            }
        }
    }
}