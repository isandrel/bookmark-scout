                        sourceId: sourceNode.id,
                        sourceParentId: sourceNode.parentId || 'root',
                        sourceIndex: sourceNode.index || 0,
                        targetId: targetNode.id,
                        targetParentId: targetNode.parentId || 'root',
                        targetIndex,
